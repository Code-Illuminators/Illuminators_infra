pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        REPO       = "illuminators_consul_ecr"
        ACCOUNT_ID = "037490753541"
        IMAGE_TAG  = "latest"
    }

    stages {

        stage('Clean Docker') {
            steps {
                echo "Cleaning up old Docker images and containers..."
                sh 'docker system prune -af'
            }
        }

        stage('Login to ECR') {
            steps {
                sh '''
                aws ecr get-login-password --region $AWS_REGION | docker login \
                  --username AWS \
                  --password-stdin $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("environment-setup/modules/consul") {
                    sh '''
                    docker build -t $REPO .
                    '''
                }
            }
        }

        stage('Tag and Push Image') {
            steps {
                dir("environment-setup/modules/consul") {
                    sh '''
                    docker tag $REPO:latest $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$REPO:$IMAGE_TAG
                    docker push $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$REPO:$IMAGE_TAG
                    '''
                }
            }
        }
    }

    post {
        always {
            
            sh 'docker system prune -af'
        }
    }
}
